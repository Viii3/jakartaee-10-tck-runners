<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>

    <extension qualifier="payara-descriptors">
        <property name="descriptorDir">target${file.separator}</property>
    </extension>

    <group qualifier="payara-servers" default="true">
        <container qualifier="tck-javatest" default="true">
            <configuration>
                <property name="payaraHome">${payara.home}</property>
            </configuration>
            <protocol type="javatest">
                <property name="trace">true</property>
                <property name="workDir">${root.tmp.directory}${file.separator}tmp</property>
                <property name="tsJteFile">jakartaeetck${file.separator}bin${file.separator}ts.jte</property>
                <property name="tsSqlStmtFile">sql${file.separator}derby${file.separator}derby.dml.sql</property>
                <property name="runClient">true</property>
                <property name="runAsVehicle">true</property>
                <property name="clientEarDir">target${file.separator}appclient</property>
                <property name="unpackClientEar">true</property>
                <property name="clientDir">${project.basedir}</property>
                <property name="clientTimeout">20000</property>
            </protocol>
        </container>
    </group>


</arquillian>